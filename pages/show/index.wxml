<!--pages/show/index.wxml-->
<text>pages/show/index.wxml</text>
<view class="section">
  <view class="section__title">普通选择器</view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      请选择制作国家：{{array[index]}}
    </view>
  </picker>
</view>
<view class="page-section page-section-gap">
        <view class="page-section-title">喜欢的游戏类型</view>
        <checkbox-group name="checkbox">
          <label><checkbox value="checkbox1"/>单机</label>
          <label><checkbox value="checkbox2"/>休闲</label>
          <label><checkbox value="checkbox3"/>网游</label>
          <label><checkbox value="checkbox4"/>赛车</label>
          <label><checkbox value="checkbox5"/>竞技</label>
          <label><checkbox value="checkbox6"/>角色模拟</label>
        </checkbox-group>
      </view>
      <view class="page-section-title">打开麦克风</view>
        <switch name="switch"/>
      <view class="page-section page-section-gap">
        <view class="page-section-title">请选择游戏音量</view>
        <slider value="50" name="slider" show-value ></slider>
      </view>

<view class="btn"><button bindtap="show">{{home}}</button></view>

